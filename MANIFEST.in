# Include the license and README
include LICENSE
include README.md

# Exclude the assets folder and all its contents from the final build
recursive-exclude assets *

# Exclude any hidden system files or cache
recursive-exclude * __pycache__
recursive-exclude * *.py[co]

# Do not include demo scripts or offline sample feeds in sdist / source packages
exclude scripts/demo_offline_snyk.sh
exclude etc/snyk_offline_sample.json
